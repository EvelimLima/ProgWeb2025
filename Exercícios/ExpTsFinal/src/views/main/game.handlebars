
<style>
  html, body {
    margin: 0;
    padding: 0;
    height: 100%;
    background-color: black;
    overflow: hidden;
  }

  .game-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  iframe {
    border: none;
    width: 100%;
    height: 100%;
  }
</style>

<div class="game-wrapper">

  <iframe src="/Space-Shooter/index.html"></iframe>
</div>

<script>
  window.addEventListener('message', (event) => {
    if (!event.data || !event.data.type) return;

    const statusEl = document.getElementById('score-status');

    if (event.data.type === 'scoreSaved') {
      statusEl.textContent = event.data.message || 'Score salvo com sucesso!';
    } else if (event.data.type === 'scoreError') {
      statusEl.textContent = 'Erro ao salvar score: ' + (event.data.message || '');
      statusEl.style.color = 'red';
    }
  });
</script>

