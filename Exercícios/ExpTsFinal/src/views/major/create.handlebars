<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-light rounded">
    <h1 class="mb-0">Cadastrar Curso</h1>
    <a href="/major" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left"></i> Voltar
    </a>
  </div>

  <form action="/major/create" method="POST" class="border rounded p-4 bg-white shadow-sm">
    <div class="mb-3">
      <label for="name" class="form-label">Nome do Curso</label>
      <input type="text" class="form-control" id="name" name="name" required placeholder="Ex: Ciência da Computação">
    </div>

    <div class="mb-3">
      <label for="code" class="form-label">Código/Sigla (4 letras)</label>
      <input type="text" class="form-control" id="code" name="code" required placeholder="Ex: CC01">
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Descrição (Opcional)</label>
      <textarea class="form-control" id="description" name="description" rows="3" placeholder="Descreva brevemente o curso..."></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="/major" class="btn btn-secondary">Cancelar</a>
  </form>
</div>
