

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-light rounded">
    <h1 class="mb-0">Lista de Usuários</h1>
    <a href="/user/create" class="btn btn-outline-secondary">
      <i class="bi bi-plus-lg me-1"></i>
    </a>
  </div>


    <div class="alert alert-warning">
      <p>Não é possível remover um usuário com pontuações registradas :)</p>
    </div>


  <div class="table-responsive border rounded p-1">
    <table class="table table-hover align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>Curso</th>
          <th class="text-end">Opções</th>
        </tr>
      </thead> 
      <tbody>
        {{#each users}}
        <tr>
          <td>{{this.fullname}}</td>
          <td>{{this.email}}</td>   
          <td>{{this.major.name}}</td>  
          <td class="text-end">
            <div class="btn-group btn-group-sm">
              <a href="/user/read/{{this.id}}" class="btn btn-outline-info">
                <i class="bi bi-eye-fill"></i>
              </a>
              <a href="/user/update/{{this.id}}" class="btn btn-outline-warning">
                <i class="bi bi-pencil-square"></i>
              </a>
              <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{this.id}}">
                <i class="bi bi-trash-fill"></i>
              </button>
            </div>


            <!-- Modal Remover -->
            <div class="modal fade" id="deleteModal{{this.id}}" tabindex="-1">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">Confirmação</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                  </div>
                  <div class="modal-body">
                    Tem certeza que deseja remover o usuário <strong>{{this.fullname}}</strong>?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form action="/user/remove/{{this.id}}" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-primary">Sim, Remover</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>

          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>






