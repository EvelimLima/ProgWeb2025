<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-light rounded">
    <h2 class="mb-0">Alterar Senha</h2>
    <a href="/about" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left"></i> Voltar
    </a>
  </div>

  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}
  {{#if success}}
    <div class="alert alert-success">{{success}}</div>
  {{/if}}

  <form method="POST" action="/user/change-password">
    <div class="mb-3">
      <label for="currentPassword" class="form-label">Senha Atual</label>
      <input type="password" name="currentPassword" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="newPassword" class="form-label">Nova Senha</label>
      <input type="password" name="newPassword" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="confirmPassword" class="form-label">Repetir Nova Senha</label>
      <input type="password" name="confirmPassword" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary">Alterar Senha</button>
    <a href="/about" class="btn btn-secondary">Cancelar</a>
  </form>
</div>
